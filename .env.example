# 环境变量示例文件
# 复制此文件为 .env 并填入实际值

# 数据库配置 - 所有服务共享同一个数据库
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres                    # 替换为你的数据库用户名
DATABASE_PASSWORD=your_password_here          # 替换为你的数据库密码

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=''                          # 如果 Redis 没有密码，留空即可

# JWT 配置
JWT_SECRET=your_jwt_secret_key_change_in_production  # 替换为安全的密钥

# 服务端口
SSE_WIKI_PORT=8080
AUTH_SERVICE_PORT=8081

# SMTP服务
SMTP_HOST=smtp.example.com                  # 替换为你的 SMTP 服务器地址
SMTP_PORT=587                               # 替换为你的 SMTP 服务器端口
SMTP_USERNAME=123
SMTP_PASSWORD=your_smtp_password_here        # 替换为你的 SMTP 密码或授权码
SMTP_FROM="邮箱名 <邮箱>"
SMTP_TLS=true                               # 是否使用 TLS，通常为 true

GITHUB_ID=client_id_here
GITHUB_SECRET=client_secret_here
